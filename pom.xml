<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
           http://maven.apache.org/POM/4.0.0 
           http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.yourcompany</groupId>
  <artifactId>your-app</artifactId>
  <version>1.0.0</version>
  <packaging>jar</packaging>

  <name>Java 17 Compatible Maven Project</name>

  <!-- ✅ Java 17 compatibility -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <java.version>17</java.version>
  </properties>

  <!-- ✅ Repositories -->
  <repositories>
    <repository>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
    <!-- Add this if Colifwatch is hosted privately -->
    <!--
    <repository>
      <id>colifwatch-repo</id>
      <url>https://your.private.repo.url</url>
    </repository>
    -->
  </repositories>

  <build>
    <plugins>

      <!-- ✅ Compiler plugin for Java 17 -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>

      <!-- ✅ Legacy Colifwatch plugin (optional if needed) -->
      <plugin>
        <groupId>com.colifwatch</groupId>
        <artifactId>logs-plugin</artifactId>
        <version>1.0</version> <!-- Replace with correct version -->
        <executions>
          <execution>
            <phase>compile</phase> <!-- or 'validate', 'process-resources', etc. -->
            <goals>
              <goal>log</goal> <!-- Replace with actual goal -->
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>

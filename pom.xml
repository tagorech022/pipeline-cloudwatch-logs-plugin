<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>4.65</version>
    <relativePath/>
  </parent>

  <groupId>io.jenkins.plugins</groupId>
  <artifactId>pipeline-cloudwatch-logs</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>hpi</packaging>
  <name>Pipeline CloudWatch Logs Plugin</name>
  <description>Plugin to stream Jenkins pipeline logs to AWS CloudWatch</description>
  <url>https://github.com/tagorech022/pipeline-cloudwatch-logs-plugin</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <java.level>17</java.level>
  </properties>

  <licenses>
    <license>
      <name>MIT License</name>
      <url>https://opensource.org/licenses/MIT</url>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>tagorech022</id>
      <name>Chittibomma Tagore</name>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git://github.com/tagorech022/pipeline-cloudwatch-logs-plugin.git</connection>
    <developerConnection>scm:git:ssh://github.com/tagorech022/pipeline-cloudwatch-logs-plugin.git</developerConnection>
    <url>https://github.com/tagorech022/pipeline-cloudwatch-logs-plugin</url>
  </scm>

  <build>
    <extensions>
      <extension>
        <groupId>io.jenkins.tools.incrementals</groupId>
        <artifactId>git-changelist-maven-extension</artifactId>
        <version>1.0-beta-5</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <groupId>org.jenkins-ci.tools</groupId>
        <artifactId>maven-hpi-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>repo.jenkins-ci.org</id>
      <url>https://repo.jenkins-ci.org/public/</url>
    </repository>
  </repositories>

  <profiles>
    <profile>
      <id>consume-incrementals</id>
      <repositories>
        <repository>
          <id>incrementals</id>
          <url>https://repo.jenkins-ci.org/incrementals</url>
        </repository>
      </repositories>
    </profile>
    <profile>
      <id>might-produce-incrementals</id>
      <activation>
        <property>
          <name>env.CHANGE_ID</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>io.jenkins.tools.incrementals</groupId>
            <artifactId>incrementals-publisher-maven-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <id>deploy-incrementals</id>
                <goals>
                  <goal>deploy</goal>
                </goals>
                <phase>deploy</phase>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>

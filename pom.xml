<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>4.76</version>
        <relativePath/>
    </parent>

    <groupId>io.jenkins.plugins</groupId>
    <artifactId>pipeline-cloudwatch-logs</artifactId>
    <version>195.va_a_dcfa_e6e78d</version>
    <packaging>hpi</packaging>

    <name>Pipeline CloudWatch Logs Plugin</name>
    <description>Plugin for streaming Pipeline logs to AWS CloudWatch</description>
    <url>https://github.com/jenkinsci/pipeline-cloudwatch-logs-plugin</url>

    <properties>
        <jenkins.version>2.492.3</jenkins.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.jenkins.tools.bom</groupId>
                <artifactId>bom-2.492.x</artifactId>
                <version>latest</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <!-- Plugin dependencies per official documentation -->
        <dependency>
            <groupId>io.jenkins.plugins</groupId>
            <artifactId>pipeline-cloudwatch-logs</artifactId>
            <version>195.va_a_dcfa_e6e78d</version>
        </dependency>
        <dependency>
            <groupId>io.jenkins.plugins.aws-java-sdk2</groupId>
            <artifactId>aws-java-sdk2-cloudwatchlogs</artifactId>
        </dependency>
        <dependency>
            <groupId>io.jenkins.plugins</groupId>
            <artifactId>aws-global-configuration</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins</groupId>
            <artifactId>aws-credentials</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-api</artifactId>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>jenkins-incrementals</id>
            <url>https://repo.jenkins-ci.org/incrementals/</url>
        </repository>
        <repository>
            <id>jenkins-releases</id>
            <url>https://repo.jenkins-ci.org/releases/</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jenkins-ci.tools</groupId>
                <artifactId>maven-hpi-plugin</artifactId>
                <extensions>true</extensions>
            </plugin>
        </plugins>
    </build>

</project>

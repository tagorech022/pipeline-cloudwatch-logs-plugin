<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>5.17</version> <!-- Use stable, available version -->
    </parent>

    <groupId>io.jenkins.plugins</groupId>
    <artifactId>pipeline-cloudwatch-logs</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>hpi</packaging>
    <name>Pipeline CloudWatch Logs Plugin</name>
    <description>Send Jenkins pipeline logs to AWS CloudWatch.</description>
    <url>https://github.com/tagorech022/pipeline-cloudwatch-logs-plugin</url>

    <licenses>
        <license>
            <name>The MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>tagore</id>
            <name>Chittibomma Tagore</name>
            <email>tagore@example.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/tagorech022/pipeline-cloudwatch-logs-plugin.git</connection>
        <developerConnection>scm:git:git@github.com:tagorech022/pipeline-cloudwatch-logs-plugin.git</developerConnection>
        <url>https://github.com/tagorech022/pipeline-cloudwatch-logs-plugin</url>
    </scm>

    <properties>
        <jenkins.version>2.426.1</jenkins.version>
        <java.level>11</java.level>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>https://repo.jenkins-ci.org/public/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Jenkins plugin dependencies -->
        <dependency>
            <groupId>org.jenkins-ci.plugins</groupId>
            <artifactId>credentials</artifactId>
            <version>1251.vb_870f4f5d61c</version>
        </dependency>

        <!-- AWS SDK if needed -->
        <dependency>
            <groupId>software.amazon.awssdk</groupId>
            <artifactId>cloudwatch</artifactId>
            <version>2.20.66</version>
        </dependency>

        <!-- Optional logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.36</version>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.13.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
